{
  "name": "nimbus",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.27.0",
	"@next/eslint-plugin-next": "^15.3.2",
	"@tailwindcss/postcss": "^4",
	"@types/bun": "latest",
	"@types/react": "^19",
	"@types/react-dom": "^19",
	"@typescript-eslint/eslint-plugin": "^8.32.1",
	"@typescript-eslint/parser": "^8.32.1",
	"eslint": "^9.27.0",
	"eslint-config-prettier": "^10.1.5",
	"eslint-plugin-react": "^7.37.5",
	"eslint-plugin-react-hooks": "^5.2.0",
	"eslint-plugin-unused-imports": "^4.1.4",
	"prettier": "^3.5.3",
	"tailwindcss": "^4",
	"tw-animate-css": "^1.3.0",
	"typescript": "^5",
	"typescript-eslint": "^8.32.1"
  },
  "scripts": {
    "dev:web": "bun --cwd=apps/web dev",
    "dev:server": "bun --cwd=apps/server dev",
    "dev": "bun --cwd=apps/web dev & bun --cwd=apps/server dev",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up-d",
    "db:migrate": "cd packages/db && npx drizzle-kit generate && npx drizzle-kit migrate",
    "build": "bun --cwd=apps/web run build",
    "start": "bun --cwd=apps/web run start",
    "format": "bunx prettier --write .",
    "check-format": "bunx prettier --check .",
    "lint": "eslint ."
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
