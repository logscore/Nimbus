{
  "name": "nimbus",
  "version": "0.1.0",
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.0",
    "typescript": "^5"
  },
  "private": true,
  "scripts": {
    "dev:web": "bun --cwd=apps/web run dev",
    "dev:server": "bun --cwd=apps/server run dev",
    "dev": "bun run dev:web & bun run dev:server",
    "build:web": "bun --cwd=apps/web run build",
    "build:server": "bun --cwd=apps/server run build",
    "build": "bun run build:web && bun run build:server",
    "start:web": "bun --cwd=apps/web run start",
    "start:server": "bun --cwd=apps/server run start",
    "start": "bun run start:web & bun run start:server",
    "lint": "bun run lint:web & bun run lint:server",
    "lint:web": "bun --cwd=apps/web run lint",
    "lint:server": "bun --cwd=apps/server run lint"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
