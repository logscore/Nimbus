{
  "name": "nimbus",
  "version": "0.1.0",
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.0",
    "typescript": "^5"
  },
  "private": true,
  "scripts": {
    "dev:web": "bun --cwd=apps/web dev",
    "dev:server": "bun --cwd=apps/server dev",
    "dev": "bun --cwd=apps/web dev & bun --cwd=apps/server dev",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up",
    "db:migrate": "cd packages/db && npx drizzle-kit generate && npx drizzle-kit migrate",
    "build": "bun --cwd=apps/web run build",
    "start": "bun --cwd=apps/web run start"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
